<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center text-center mt-5">
    <div class="col-md-6"> 

      <ol class="list-unstyled">
        <% posts.sort((a,b) => b.likes - a.likes)
        for(var i=0; i<posts.length; i++) {
          %>
          <li class="mb-4 d-flex align-items-center justify-content-between"> 
            <!-- display rank number -->
            <span class="rank">#<%= i + 1 %></span> 
            <!-- plugin heading -->
            <a href="/post/<%= posts[i]._id%>">
              <h2><%= posts[i].plugin %></h2>
            </a>
            <!-- fire button -->
              <form
              action="/post/likePost/<%= posts[i]._id %>?_method=PUT"
              method="POST">
              <button class="btn  fa fa-fire" style="color: orange;" type="submit"> 
                <%= posts[i].likes %>
              </button>
            </form>
            
          </li>
        <% } %>
      </ol>
    </div>
  </div>
</div>

<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-6 mt-5 text-center">
      <a class="btn btn-primary mx-2" href="/profile">Profile</a>
     <a class="btn btn-primary mx-2" href="/home">Top of Feed</a>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>

