<%- include('partials/header') -%>
<div class="container d-flex justify-content-center">
  <div class="row col-6 mt-5">
    <div class="">
      <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary custom">Logout</a>
      </div>

      <div class="mt-5">
        <h2>Saved Plugins</h2>
        <ul class="list-unstyled">
          <% for(var i=0; i<posts.length; i++) { %>
            <li class="mb-4 d-flex align-items-center justify-content-between"> 
              <!-- plugin heading -->
              <a href="/post/<%= posts[i]._id%>">
                <h2><%= posts[i].plugin %></h2>
              </a>
            </li>
          <% } %>
        </ul>
      </div>

      <div class="mt-5">
        <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
        <% } %> <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success text-center"><%= success_msg %></div>
        <% } %>
      </div>

      <div class="mt-5">
        <h2>Add a plugin</h2>
        <form action="/post/createPost" method="POST">
          <div class="mb-3">
            <label for="plugin" class="form-label">Plugin</label>
            <input type="text" class="form-control" id="plugin" name="plugin" />
          </div>
          <div class="mb-3">
            <label for="company" class="form-label">Company</label>
            <input
              type="text"
              class="form-control"
              id="company"
              name="company"
            />
          </div>
          <div class="mb-3">
            <label for="category">Category</label>
            <select id="category" name="category">
              <option value="Instrument">Instrument</option>
              <option value="Synthesizer">Synthesizer</option>
              <option value="Fx">FX</option>
              <option value="Dynamics">Dynamics</option>
              <option value="EQ/Filter">EQ/Filter</option>
              <option value="Reverb/Delay">Reverb/Delay</option>
              <option value="Distortion/Saturation">
                Distortion/Saturation
              </option>
              <option value="Utility/Imaging">Utility/Imaging</option>
              <option value="Mixing/Mastering">Mixing/Mastering</option>
              <option value="Bundle">Bundle</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="freeOrPaid">Free or Paid?</label>
            <select id="freeOrPaid" name="freeOrPaid">
              <option value="Free">Free</option>
              <option value="Paid">Paid</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="link" class="form-label">Link to product page</label>
            <input type="text" class="form-control" id="link" name="link" />
          </div>

          <button type="submit" class="btn btn-primary custom" value="Upload">
            Submit
          </button>
        </form>

        <div class="mt-5">
          <a class="btn btn-primary" href="/home">Return to home page</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="row justify-content-center mt-5"></div>
    </div>
  </div>
  <%- include('partials/footer') -%>
</div>
